{
  "$schema": "../umbraco-package-schema.json",
  "id": "UmbGeo-Location",
  "name": "UmbGeo Location",
  "version": "16.0.0",
  "allowPackageTelemetry": true,
  "extensions": [
    {
      "type": "propertyEditorUi",
      "alias": "UmbGeo.Location",
      "name": "Geo Location",
      "element": "/App_Plugins/UmbGeo/umb-geo.js",
      "elementName": "UmbGeo-Location",
      "meta": {
        "label": "Geo Location",
        "icon": "icon-locate",
        "group": "common",
        "propertyEditorSchemaAlias": "Umbraco.Plain.String",
        "settings": {
          "properties": [
            {
              "alias": "defaultGeolocation",
              "label": "Default geolocation value",
              "description": "The default geolocation value to use if no value is set",
              "propertyEditorUiAlias": "UmbGeo.Location"
            },
            {
              "alias": "defaultLeafletMap",
              "label": "Leaflet map",
              "description": "Toggle to show / hide the leaflet map",
              "propertyEditorUiAlias": "Umb.PropertyEditorUi.Toggle"
            },
            {
              "alias": "defaultMapHeight",
              "label": "Height of the map",
              "description": "Number of pixels for the height of the map",
              "propertyEditorUiAlias": "Umb.PropertyEditorUi.Integer"
            }
          ]
        }
      }
    }
  ]
}
