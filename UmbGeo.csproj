<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <StaticWebAssetBasePath>App_Plugins/</StaticWebAssetBasePath>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>UmbGeo</PackageId>
    <Product>UmbGeo</Product>
    <Title>UmbGeo</Title>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Umbraco.Cms.Web.Website" Version="*" />  
    <PackageReference Include="Umbraco.Cms.Web.Common" Version="*" />
    <PackageReference Include="Umbraco.Cms.Api.Common" Version="*" />
    <PackageReference Include="Umbraco.Cms.Api.Management" Version="*" />
    <PackageReference Include="GeoCoordinates.Core" Version="*" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Dont include the client folder as part of packaging nuget build -->
    <Content Remove="wwwroot\**" />

    <!-- However make the Umbraco-package.json included for dotnet pack or nuget package and visible to the solution -->
    <None Include="wwwroot\public\umbraco-package.json" />
  </ItemGroup>

<Target Name="NpmBuild" BeforeTargets="BeforeBuild">
	  <Exec Command="npm install" WorkingDirectory="wwwroot\UmbGeo" />
	  <Exec Command="npm run build" WorkingDirectory="wwwroot\UmbGeo" />
  </Target>

	<Target Name="NpmRemove" AfterTargets="AfterBuild">
		<RemoveDir Directories="Client\UmbGeo\node_modules" />
	</Target>
  

</Project>
